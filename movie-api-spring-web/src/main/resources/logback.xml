<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
        <Target>System.out</Target>
        <encoder>
            <pattern>%n[%p] %d{yyyy-MM-dd HH:mm:ss} %logger \(%file:%line\) %n%m %n</pattern>
        </encoder>
    </appender>

    <logger name="nxu.it" level="debug"/>

    <root level="error">
        <appender-ref ref="stdout"/>
    </root>
</configuration>